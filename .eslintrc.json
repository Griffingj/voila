{
  "extends": "airbnb",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "comma-dangle": 0,
    "max-len": [
      "error",
      {
        "code": 100,
        "tabWidth": 2,
        "ignoreTrailingComments": true,
        "ignoreUrls": true
      }
    ],
    "no-multi-spaces": [2, {
      "exceptions": {
        "ImportDeclaration": true
      }
    }]
  }
}
